{
  "name": "Highlightr",
  "description": "Instantly store text",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "https://sandbox.evernote.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Store away!",
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
